- var path = auth.path
- var checkLogin = auth.checkLogin

nav(class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top")
  div(class="container")

    if checkLogin == true
      button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
        span(class="navbar-toggler-icon")

    a(class="navbar-brand headerTitle" href="/home")
      img(src="/images/icon.png" class="d-inline-block align-top headerIcon")
      font(class="headerTitle") #{title}

    if checkLogin == true
      div(id="navbarNav" class="collapse navbar-collapse")
        ul(class="navbar-nav mr-auto mt-2 mt-lg-0")
          li(class=path == "/home" ? "nav-item active" : "nav-item")
            a(class="nav-link" href="/home") 首頁
          
          li(class=path == "/calendar" ? "nav-item active" : "nav-item")
            a(class="nav-link" href="/calendar") 行程

          li(class=path == "/records" ? "nav-item active" : "nav-item")
            a(class="nav-link" href="/records/0/6") 紀錄

          li(class=path == "/live" ? "nav-item active" : "nav-item")
            a(class="nav-link" href="/live/0/6") 直播
        
        form(class="form-inline my-2 my-lg-0")
          img(src=auth.picture class="d-inline-block align-top headerIcon")
          div(class="userName") Hi：#{auth.name}
          button(class="btn btn-outline-success my-2 my-sm-0" type="submit") 登出