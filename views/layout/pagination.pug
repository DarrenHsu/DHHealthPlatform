nav(aria-label="page navigation")
  - var n = 1;
  ul(class="pagination justify-content-center")
    //- Previous Button
    if previous == true 
      li(class="page-item")
        a(class="page-link" href=auth.path + "/" + (pageIndex - 1) aria-label="Previous")
          span(aria-hidden="true") &laquo;
          span(class="sr-only") Previous
    
    //- Button Group
    while n <= pageCount
      li(class=pageIndex == n ? "page-item active" : "page-item")
        a(class="page-link" href=auth.path + "/" + n)= n
      - n++

    //- Next Button
    if next == true 
      li(class="page-item")
        a(class="page-link" href=auth.path + "/" + (pageIndex + 1) aria-label="Next")
          span(aria-hidden="true") &raquo;
          span(class="sr-only") Next