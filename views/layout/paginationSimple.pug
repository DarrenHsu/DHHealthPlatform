nav(aria-label="page navigation")
  ul(class="pagination justify-content-end")
    //- Previous Button
    if previous == true 
      li(class="page-item")
        a(class="page-link" href=auth.path + "/" + preToken aria-label="Previous")
          span(aria-hidden="true") 上一頁
          span(class="sr-only") Previous
    
    //- Next Button
    if next == true 
      li(class="page-item")
        a(class="page-link" href=auth.path + "/" + nxtToken aria-label="Next")
          span(aria-hidden="true") 下一頁
          span(class="sr-only") Next